<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="exe.weazy.reko">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="exe.weazy.reko.di.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="exe.weazy.reko.ui.main.create.CreateMemeActivity"></activity>
        <activity android:name="exe.weazy.reko.ui.main.memes.MemeActivity" />
        <activity
            android:name="exe.weazy.reko.ui.splash.SplashActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="exe.weazy.reko.ui.main.MainActivity" />
        <activity
            android:name="exe.weazy.reko.ui.login.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>