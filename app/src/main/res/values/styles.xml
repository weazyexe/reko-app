<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorViolet</item>
        <item name="colorPrimaryVariant">@color/colorVioletDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorSecondary">@color/colorViolet</item>
        <item name="colorSecondaryVariant">@color/colorVioletDark</item>
        <item name="colorOnSecondary">@color/colorWhite</item>

        <item name="android:textColor">@android:color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="TextField.Email" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconDrawable">@drawable/ic_email_24dp</item>
    </style>

    <style name="TextField.Password" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconDrawable">@drawable/ic_vpn_key_24dp</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="TextField.Password.Confirm" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconDrawable">@drawable/ic_check_circle_24dp</item>
    </style>

    <style name="MemeCard" parent="CardView">
        <item name="cardBackgroundColor">?android:colorAccent</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="MemeCard.Title">
        <item name="fontWeight">700</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
