<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorDeepBlue</item>
        <item name="colorAccent">@color/colorBlue</item>

        <item name="android:colorBackground">@color/colorBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorOnBackground">@color/colorWhite</item>
        <item name="colorSurface">@color/colorBlue</item>
        <item name="colorOnSurface">@color/colorLightGrey</item>
        <item name="colorSecondary">@color/colorBlue</item>
        <item name="colorOnSecondary">@color/colorLightBlue</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorBlueVariant</item>
        <item name="errorTextColor">@color/colorRed</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
    </style>

    <style name="TextField.Transparent" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextColor">@color/colorRed</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/colorDarkBlue</item>
        <item name="hintTextColor">@color/colorDarkBlue</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextField.Password" parent="TextField">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">?android:colorPrimary</item>
        <item name="helperTextTextColor">@color/colorWhite</item>
    </style>

    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?android:colorPrimary</item>
        <item name="android:textColor">?android:colorAccent</item>
    </style>

    <style name="MemeCard" parent="CardView">
        <item name="cardBackgroundColor">?android:colorAccent</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="MemeCard.Title">
        <item name="fontWeight">700</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
